@{
    ViewBag.Title = "Login - CaxSecurity";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/Imagenes/LogoCaxSecurityFinal2.png">
    <title>Login - CaxSecurity</title>
    <link rel="stylesheet" href="/css/StyleLogin.css">
</head>
<body>
    <div class="container">
        <div class="img-box">
            <img src="/Imagenes/LogoCaxSecurityFinal2.png" alt="Logo APP" />
        </div>
        <div class="content-box">
            <div class="content">
                <h2>Iniciar Sesión</h2>
                <form action="/Home/Index">
                    <div class="input-box">
                        <label for="correo">Ingrese correo</label>
                        <input type="text" placeholder="Ingresa tu correo" id="correo" />
                    </div>
                    <div class="input-box">
                        <label for="password">Ingrese contraseña</label>
                        <input type="password" placeholder="Ingresa tu contraseña" id="password" />
                    </div>
                    <div class="input-box">
                        <label for="password"><input type="checkbox" />Olvide mi contraseña</label>                        
                    </div>
                    <div class="input-box">
                        <input type="submit" value="Iniciar Sesión"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>